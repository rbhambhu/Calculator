			android:layout_width="50dp" android:layout_weight="50" android:id="@+id/zero"
			android:text="0" android:textSize="35dp" android:background="@android:color/transparent"
			android:textColor="@android:color/white">
		</Button>


		<Button android:layout_weight="25" android:id="@+id/plus"
			android:layout_height="fill_parent" android:layout_width="25dp"
			android:text="+" android:textSize="35dp" android:background="@android:color/transparent"
			android:textColor="@android:color/white"></Button>
