			android:layout_height="fill_parent" android:text="%"
			android:layout_width="25dp" android:textSize="35dp"
			android:background="@android:color/transparent" android:textColor="@android:color/white"></Button>

	</LinearLayout>
	<LinearLayout android:layout_weight="16"
		android:orientation="horizontal" android:weightSum="100"
		android:layout_width="fill_parent" android:layout_height="16dp">

		<Button android:layout_weight="25" android:id="@+id/clear"
			android:layout_height="fill_parent" android:layout_width="25dp"
			android:text="C" android:textSize="35dp" android:background="@android:color/transparent"
			android:textColor="@android:color/white"></Button>
		<Button android:layout_height="fill_parent"
			android:layout_width="50dp" android:layout_weight="50" android:id="@+id/eq"
			android:text="=" android:textSize="35dp" android:background="@android:color/transparent"
			android:textColor="@android:color/white">
		</Button>
		<Button android:layout_weight="25" android:id="@+id/allclear"
			android:layout_height="fill_parent" android:text="AC"
			android:layout_width="25dp" android:textSize="35dp"
			android:background="@android:color/transparent" android:textColor="@android:color/white"></Button>

	</LinearLayout>
